pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone your repo to Jenkins workspace
                git branch: 'main', url: 'https://github.com/abhilashrai28/New.git'
            }
        }

        stage('Create Target Folder in /root') {
            steps {
                sh """
                    sudo mkdir -p /root/myapp
                """
            }
        }

        stage('Copy ZIP to /root/myapp') {
            steps {
                sh """
                    sudo cp "\${WORKSPACE}/grocery-reactjs.zip" /root/myapp/
                """
            }
        }

        stage('Unzip in /root/myapp') {
            steps {
                sh """
                    cd /root/myapp
                    sudo unzip -o grocery-reactjs.zip
                    sudo rm -f grocery-reactjs.zip
                """
            }
        }

        stage('Fix Permissions') {
            steps {
                sh """
                    sudo chown -R root:root /root/myapp
                    sudo chmod -R 755 /root/myapp
                """
            }
        }
    }

    post {
        failure {
            echo '❌ Deployment failed.'
        }
        success {
            echo '✅ Deployment successful to /root/myapp.'
        }
    }
}
